@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using DemoApplication.Areas.Admin.ViewModels.User
@model List<UserListItemViewModel>

<div class="col-lg-12">
    <div class="row justify-content-end">
        <div class="">
            <a asp-route="admin-user-add" class="btn btn-secondary">Add new User</a>
        </div>
    </div>
</div>
<div class="col-lg-12">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Books</h4>
        </div><!--end card-header-->
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped mb-0">
                    <thead>
                        <tr>
                            <th>Email</th>
                            <th>FistName</th>
                            <th>LastName</th>
                            <th>Role</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>@user.Email</td>
                                <td>@user.FirstName</td>
                                <td>@user.LastName</td>
                                <td>@user.Role</td>
                                <td class="text-end">
                                    <a asp-route="admin-user-update" asp-route-id="@user.Id" class="btn btn-success">Update</a>
                                    <form id="user-@user.Id" method="post" asp-route="admin-user-delete" asp-route-id="@user.Id" class="d-none"></form>
                                    <button form="user-@user.Id" type="submit" class="btn btn-danger">Delete</button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table><!--end /table-->
            </div><!--end /tableresponsive-->
        </div><!--end card-body-->
    </div><!--end card-->
</div>