@using DemoApplication.Areas.Client.ViewModels.Basket;
@model List<ProductCookieViewModel>

<div class="cart-total">
    <span class="text-number">
        @Model!.Count
    </span>
    <span class="text-item">
        Shopping Cart
    </span>
    <span class="price">
        £@Model!.Sum(pcvm => pcvm.Total)
        <i class="fas fa-chevron-down"></i>
    </span>
</div>
<div class="cart-dropdown-block">
    <div class=" single-cart-block " id="basket-cart-mini">
        @foreach (var product in Model)
        {
            <div class="cart-product">
                <a href="product-details.html" class="image">
                    <img src="~/@product.ImageUrl" alt="">
                </a>
                <div class="content">
                    <h3 class="title">
                        <a href="product-details.html">
                            @product.Title
                        </a>
                    </h3>
                    <p class="price"><span class="qty">@product.Quantity ×</span> £@product.Price</p>
                    <a asp-route="client-basket-delete" asp-route-id="@product.Id" data-id="@product.Id" class="cross-btn remove-product-to-basket-btn">X</a>
                </div>
            </div>
        }
    </div>
    <div class=" single-cart-block ">
        <div class="btn-block">
            <a asp-route="client-shop-cart-index" class="btn">
                View Cart <i class="fas fa-chevron-right"></i>
            </a>
            <a asp-route="client-order-checkout" class="btn btn--primary">
                Check Out <i class="fas fa-chevron-right"></i>
            </a>
        </div>
    </div>
</div>